<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="sample.SocialWorkerMenuScreenController"
            stylesheets="@../Design/menu_menager.css" >

    <top>

        <GridPane alignment="center"  vgap="25" gridLinesVisible="false">

            <padding><Insets top="50" /></padding>

            <columnConstraints>
                <ColumnConstraints percentWidth="50"></ColumnConstraints>
                <ColumnConstraints percentWidth="50"></ColumnConstraints>
            </columnConstraints>

            <Label text="Create Menu" GridPane.rowIndex="0" GridPane.columnIndex="0" translateX="0" GridPane.halignment="CENTER">
            </Label>

            <Button fx:id="addTreeTestDiagnosticButton" text="Create a Tree Test Diagnostic report" prefHeight="40" prefWidth="300" onAction="#onMenuButtonClicked"
                    GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.halignment="CENTER" ></Button>
            <Button fx:id="addPersonTestDiagnosticButton" text="Create a Person Test Diagnostic report"  prefHeight="40"  prefWidth="300"  onAction="#onMenuButtonClicked"
                    GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.halignment="CENTER" > </Button>
            <Button fx:id="addHouseTestDiagnosticButton" text="Create a House Test Diagnostic report"  prefHeight="40"  prefWidth="300"  onAction="#onMenuButtonClicked"
                    GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.halignment="CENTER" > </Button>

            <ImageView GridPane.rowIndex="4" GridPane.columnIndex="0" fitHeight="150.0" fitWidth="170.0" translateX="240" translateY="40">
                <image>
                    <Image url="@../Photos/write.png" />
                </image>
            </ImageView>

            <Label text="Watch Menu" GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.halignment="CENTER">
            </Label>

            <Button fx:id="watchTreeTestDiagnosticButton" text="Watch Tree test Diagnostics" prefHeight="40" prefWidth="300" onAction="#onMenuButtonClicked"
                    GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.halignment="CENTER"> </Button>
            <Button fx:id="watchPersonTestDiagnosticButton" text="Watch Person test Diagnostics " prefHeight="40" prefWidth="300"  onAction="#onMenuButtonClicked"
                    GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.halignment="CENTER" > </Button>
            <Button fx:id="watchHouseTestDiagnosticButton" text="Watch House test Diagnostics" prefHeight="40" prefWidth="300" onAction="#onMenuButtonClicked"
                    GridPane.rowIndex="3" GridPane.columnIndex="1" GridPane.halignment="CENTER" > </Button>

            <ImageView GridPane.rowIndex="4" GridPane.columnIndex="1" fitHeight="150.0" fitWidth="250.0" translateX="200" translateY="40">
                <image>
                    <Image url="@../Photos/watch.png" />
                </image>
            </ImageView>

        </GridPane>


    </top>

    <bottom >

        <VBox alignment="CENTER">


            <StackPane alignment="CENTER_RIGHT">
                <Button fx:id="exitButton" text="Exit" prefHeight="40" prefWidth="150" onAction="#onMenuButtonClicked" > </Button>
            </StackPane>
        </VBox>

    </bottom>





</BorderPane>
