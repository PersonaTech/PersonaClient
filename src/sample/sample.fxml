<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>


<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TextField?>


<?import javafx.scene.control.PasswordField?>
<GridPane fx:controller="sample.sampleController"
          xmlns:fx="http://javafx.com/fxml"
          alignment="center" hgap="10" vgap="10"
          gridLinesVisible="false"
          stylesheets="@../Design/login_css.css" >

    <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>

    <ImageView fx:id="loginPicImageView" GridPane.rowIndex="0" GridPane.columnIndex="0" fitHeight="180.0" fitWidth="250.0">
        <image >
            <Image url="@../Photos/logo.png"/>
        </image>
    </ImageView>

    <Label text="Username" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.halignment="CENTER"> </Label>

    <TextField fx:id="usernameField" GridPane.rowIndex="2" GridPane.columnIndex="0"
               GridPane.halignment="CENTER" promptText="Username" alignment="CENTER"
                onKeyReleased="#handleKeyReleased">
    </TextField>


    <Label text="Password" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.halignment="CENTER" > </Label>


    <PasswordField fx:id="passwordField" GridPane.rowIndex="4" GridPane.columnIndex="0"
               GridPane.halignment="CENTER" promptText="Password"  alignment="CENTER"
               onKeyReleased="#handleKeyReleased">
    </PasswordField>


    <CheckBox fx:id="rememberMeField" text="remember me" GridPane.rowIndex="5" GridPane.columnIndex="0"
              GridPane.halignment="CENTER"
                onAction="#handleCheckBox">
        <padding>
            <Insets top="50" right="50" left="50" bottom="10"/>
        </padding>
    </CheckBox>

    <Button fx:id="loginButton" text="login" GridPane.rowIndex="6" GridPane.columnIndex="0"
            GridPane.halignment="CENTER" prefWidth="120" onAction="#onLoginButtonClicked">
        <graphic>
            <ImageView>
                <Image url="@/toolbarButtonGraphics/navigation/Forward24.gif"/>
            </ImageView>
        </graphic>
    </Button>


</GridPane>











